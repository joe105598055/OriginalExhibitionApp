<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:background="@drawable/common_border">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="286dp">

            <TextView
                android:text="@string/txPower_20m"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/common_border"
                android:id="@+id/txPower_20m"
                android:layout_weight="0.41"
                android:textSize="80sp"
                android:gravity="center"
                android:clickable="true" />

            <TextView
                android:text="@string/txPower_50m"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/common_border"
                android:id="@+id/txPower_50m"
                android:layout_weight="0.42"
                android:textSize="80sp"
                android:gravity="center"
                android:clickable="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:text="@string/txPower_1m"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/common_border"
                android:id="@+id/txPower_1m"
                android:layout_weight="1.00"
                android:textSize="80sp"
                android:gravity="center"
                android:clickable="true"
                android:textAllCaps="false" />

            <TextView
                android:text="@string/txPower_10m"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/common_border"
                android:id="@+id/txPower_10m"
                android:layout_weight="0.42"
                android:textSize="80sp"
                android:gravity="center"
                android:clickable="true" />

        </LinearLayout>
    </LinearLayout>
</GridLayout>