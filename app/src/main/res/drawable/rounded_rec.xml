<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!--
    shape的類型含有:  
    1.rectangle 長方形、矩形
    2.oval 橢圓形、卵形
    3.line 線
    4.ring 環形
    -->


    <!-- 圓角，Layout佈局圓角幅度設定值 -->
    <corners android:radius="8dip" />

    <!-- 框內底部顏色 -->
    <solid android:color="@android:color/black" />

    <!-- 外框，框線粗細，框線顏色 -->
    <stroke
        android:width="0.3dip"
        android:color="@color/stroke_gray" />

    <!-- 畫面顏色漸層，開始色碼與結束色碼進行漸層，角度為270度 -->
    <gradient
        android:angle="270"
        android:endColor="#FAFFFB"
        android:startColor="#FAFFFB" />

    <!-- padding內縮距離 -->



</shape>